extends layout

block content
  h1 Welcome to #{title}
  form.user_input(action='/search', method='post')
    label(for='search')
      span Search
      input(type='text', name='search', id='search')
    label.control-label(for='submit')
      span
      input(type='submit', id='submit', value='Search')

  p
    if userid
      a(href="/dashboard") Your Dashboard
      br
      a(href="/logout") Logout
    else
      a(href="/login") Login